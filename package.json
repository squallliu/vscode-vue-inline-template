{
    "name": "vue-inline-template",
    "private": true,
    "displayName": "Vue Inline Template",
    "description": "Syntax highlighting for vue inline template inside of JavaScript and TypeScript tagged template strings",
    "version": "1.1.7",
    "publisher": "squall",
    "icon": "docs/vue-logo.png",
    "galleryBanner": {
        "color": "#fcfcfc",
        "theme": "light"
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "build": "vsce package",
        "clean": "rm -rf ./out && rm -f *.vsix"
    },
    "repository": {
        "url": "https://github.com/squallliu/vscode-vue-inline-template"
    },
    "bugs": {
        "url": "https://github.com/squallliu/vscode-vue-inline-template/issues"
    },
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:javascriptreact",
        "onLanguage:typescript",
        "onLanguage:typescriptreact"
    ],
    "main": "./out/index.js",
    "keywords": [
        "vue",
        "template",
        "javascript",
        "typescript",
        "html"
    ],
    "contributes": {
        "grammars": [
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.vue-inline-template",
                "path": "./syntaxes/vue-inline-template.json",
                "embeddedLanguages": {
                    "meta.embedded.block.html": "html"
                }
            },
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.vue-inline-template.string.injection",
                "path": "./syntaxes/vue-inline-template-string-injection.json",
                "embeddedLanguages": {
                    "meta.template.expression.ts": "typescript"
                }
            }
        ],
        "typescriptServerPlugins": [
            {
                "name": "typescript-lit-html-plugin",
                "enableForWorkspaceTypeScriptVersions": true
            }
        ]
    },
    "dependencies": {
        "typescript-lit-html-plugin": "^0.9.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.29.0",
        "typescript": "^4.3.2",
        "vsce": "^1.91.0",
        "vscode-test": "^1.5.2"
    }
}